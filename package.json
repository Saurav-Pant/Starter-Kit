    "clsx": "^2.0.0",
    "commander": "^10.0.0",
    "lucide-react": "^0.261.0",
    "next": "^13.4.10",
    "next-themes": "^0.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^1.14.0",
    "tailwindcss-animate": "^1.0.6"
  },
  "devDependencies": {
    "@testing-library/react": "^14.0.0",
    "@types/node": "20.4.2",
