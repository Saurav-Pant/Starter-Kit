    "pretty-quick": "^3.1.3",
    "tailwindcss": "3.3.2",
    "turbo": "^1.10.8",
    "typescript": "^5.1.6",
    "vitest": "^0.33.0"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
